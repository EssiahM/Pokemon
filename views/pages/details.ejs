<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/header") %>
</head>

<body class="bg-gray-100 flex justify-center items-center min-h-screen">
    <div class="bg-yellow-300 border-4 border-yellow-500 rounded-xl shadow-lg p-6 w-80 text-center relative">
        <!-- Top Section -->
        <div class="flex justify-between items-center mb-2">
            <span class="bg-gray-200 text-gray-700 px-2 py-1 rounded text-xs font-bold">BASIC</span>
            <h1 class="text-2xl font-bold capitalize"><%- pokemon.name.trim() %></h1>
            <span class="text-lg font-bold text-yellow-600">HP 60</span>
        </div>

        <!-- PokÃ©mon Image -->
        <div class="bg-white border-2 border-gray-300 rounded-lg p-2 mx-auto">
            <img src="<%= pokemon.sprites.front_default %>" alt="<%- pokemon.name.trim() %>"
                class="w-full h-40 object-contain">
        </div>

        <!-- Bottom Section: Height, Weight, Type -->
        <div class="mt-3 p-3 bg-yellow-200 rounded">
            <p class="text-sm font-semibold">Height: <%- pokemon.height %></p>
            <p class="text-sm font-semibold">Weight: <%- pokemon.weight %></p>
            <p class="text-sm font-semibold">Type: <%- pokemon.types.map(t=> t.type.name).join(', ') %></p>
        </div>

        <!-- Back Button -->
        <div class="mt-3">
            <a href="/" class="px-4 py-2 bg-yellow-500 text-white rounded-lg">Back</a>
        </div>
    </div>
</body>

</html>